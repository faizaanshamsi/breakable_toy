<h1 class="team-heading">Teams</h1><br>
  <% @teams.each do |team| %>
    <div class="row team">
      <div class="small-4 columns">
        <h5>Captain: <%= team.captain.first_name %></h5>
        <%= image_tag "#{team.captain.profile_picture}", class: "captain-picture" %><br>
      </div>
      <div class="small-8 columns team-profile">
          <h3><%= team.name %></h3><br>
          <h4><%= team.users.count %>/5 Members</h4>
          <h4><%= team.total_points %> Points</h4>
        <% unless @user.has_team? || (team.users.size >= Team.max_size) %>
          <%= link_to 'Join', edit_user_path(@user, team_id: team), class: "button tiny" %>
        <% end %>
      </div>
    </div>
  <% end %>

<% unless @user.has_team? %>
  <%= link_to 'Create Your Own', new_team_path, class: "button" %>
<% end %>
