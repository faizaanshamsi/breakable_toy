<div class="row profile-head">
  <div class="small-4 columns">
    <%= image_tag "#{@user.profile_picture}", class: "profile-picture" %>
  </div>
  <div class="small-8 column">
    <p>
      Points: <!-- Filler --> 300
    </p>
    <p>
      Consistency <!-- Filler --> 5/7 Days per week
    </p>
    <p>
      Favorite Activity: <!-- Filler --> Skiing
    </p>
  </div>
</div>

<div class="row profile-activity">
  <h3 id="profile-subheading">My Activities:</h3>
  <% @activities.each do |activity| %>
    <p>
      I currently enjoy <%= activity.name %> regularly
      <%= link_to "Remove", user_activity_path(@user_activities.find_by(activity_id: activity.id)), action: :destroy, method: :delete, class: "button small right remove-activity" %>
      <%= link_to "Add New Accomplishment", new_accomplishment_path(activity_id: activity), class: "button small right" %>
    </p>
  <% end %>
  <br>
  <%= link_to 'Add an Activity', activities_path, class: "button wide" %>
</div>

<div class="row profile-accomplishment">
  Recent Accomplishments:
<!-- Temporary Filler -->
  <h4>I Biked for 30 minutes and earned 200 points!</h4>
  <h4>I Swam for 35 minutes and earned 350 points!</h4>
</div>



